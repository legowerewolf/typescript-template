{
	"name": "typescript-template",
	"version": "1.0.0",
	"description": "Template repository for Typescript projects.",
	"author": "legowerewolf",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/legowerewolf/typescript-template.git"
	},
	"bugs": {
		"url": "https://github.com/legowerewolf/typescript-template/issues"
	},
	"homepage": "https://github.com/legowerewolf/typescript-template#readme",
	"private": true,
	"scripts": {
		"build": "tsc",
		"start": "node build/index.js",
		"dev": "nodemon",
		"docs": "typedoc",
		"test": "mocha",
		"coverage": "nyc npm test",
		"lint": "eslint ./src --ext .js,.jsx,.ts,.tsx"
	},
	"mocha": {
		"require": [
			"ts-node/register"
		],
		"recursive": true,
		"spec": "src/**/*.spec.ts"
	},
	"devDependencies": {
		"@types/chai": "^4.2.12",
		"@types/mocha": "^7.0.2",
		"@typescript-eslint/eslint-plugin": "^2.34.0",
		"@typescript-eslint/parser": "^2.34.0",
		"chai": "^4.2.0",
		"eslint": "^6.8.0",
		"eslint-config-prettier": "^6.11.0",
		"mocha": "^7.2.0",
		"nodemon": "^2.0.4",
		"nyc": "^15.1.0",
		"ts-node": "^8.10.2",
		"typedoc": "^0.18.0",
		"typescript": "^3.9.7"
	},
	"dependencies": {
		"source-map-support": "^0.5.19"
	}
}
